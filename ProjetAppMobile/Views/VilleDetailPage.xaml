<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetAppMobile.Views.VilleDetailPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Modifier" Command="{Binding ModifierVilleCommand}" />
    </ContentPage.ToolbarItems>
    
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Nom :" FontSize="Medium" />
        <Label Text="{Binding Nom}" FontSize="Small"/>
        <Label Text="Description :" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Small"/>
        <Label Text="Pays :" FontSize="Medium" />
        <Label Text="{Binding NomPaysVille}" FontSize="Small"/>
        <Label Text="Météo" FontSize="Medium" />
        <Label Text="{Binding Meteo}" FontSize="Small"/>
        <Label Text="Température" FontSize="Medium" />
        <Label Text="{Binding Temperature}" FontSize="Small" />
    </StackLayout>

</ContentPage>